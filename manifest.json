{
  "manifest_version": 2,
  "name": "KioskLocalStorage",
  "short_name": "KioskLocalStorage",
  "description": "",
  "version": "0.0.1",
  "minimum_chrome_version": "38",

  "icons": {
    "16": "assets/icon_16.png",
    "128": "assets/icon_128.png"
  },

  "kiosk_enabled": true,
  "kiosk_only": false,
  "offline_enabled": true,

  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  
  "permissions": [
    "storage"
  ]
}
